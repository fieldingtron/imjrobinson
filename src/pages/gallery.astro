---
import BaseLayout from '../layouts/ToolkitLayout.astro'
const pageTitle = 'Isabelle Robinson Art Galleries'
---

<BaseLayout title={pageTitle}>
  <main>
    <div class='container'>
      <div class='row row-cols-1 row-cols-md-2 py-3'>
        <div
          class='col d-flex d-sm-flex d-md-flex justify-content-center align-items-center justify-content-sm-center align-items-md-center py-3'
        >
          <a href='/assemblages.html'>
            <div>
              <img
                class='img-fluid'
                src='/img/assemblages_icon_3.jpg'
                width='400'
              />
              <h1 class='text-center pt-2'>Assemblages</h1>
            </div>
          </a>
        </div>
        <div
          class='col d-flex d-sm-flex d-lg-flex d-xxl-flex justify-content-center align-items-center justify-content-sm-center align-items-sm-center justify-content-lg-center align-items-lg-center align-items-xxl-center py-3'
        >
          <a href='paintings.html'>
            <div>
              <img
                class='img-fluid d-sm-flex align-items-sm-start'
                src='/img/paintings.png'
                width='400'
              />
              <h1 class='text-center pt-2'>Paintings</h1>
            </div>
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
