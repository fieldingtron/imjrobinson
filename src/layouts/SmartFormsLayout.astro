---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import BaseMeta from '../components/BaseMeta.astro'
import BaseScripts from '../components/BaseScripts.astro'
import '../styles/bootstrap.min.css'
import '../styles/stylezz.css'

const { title } = Astro.props
const pageTitle = title ?? 'Isabelle Robinson Art'
---

<!doctype html>
<html data-bs-theme='light' lang='en'>
  <head>
    <BaseMeta />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <!-- <h1>{pageTitle}</h1> -->
    <slot />
    <Footer />
    <BaseScripts />
    <script>
      import '../scripts/smart-forms.min.js'
    </script>
  </body>
</html>
